{
  "name": "CryptoDash",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Stay up to date with all latest cryptocurrency prices and news straight from your new tab page.",
  "homepage_url": "http://dillionverma.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icons/icon16.png",
    "default_title": "Quick Prices",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "chrome_url_overrides": {
    "newtab": "src/override/override.html"
  },
  "permissions": [
    "chrome://favicon/",
    "cookies",
    "notifications"
  ]
}
